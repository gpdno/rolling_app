<p id="notice"><%= notice %></p>

<h1>Listing Project Threads</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @project_threads.each do |project_thread| %>
      <tr>
        <td><%= project_thread.user_id %></td>
        <td><%= project_thread.title %></td>
        <td><%= link_to 'Show', project_thread %></td>
        <td><%= link_to 'Edit', edit_project_thread_path(project_thread) %></td>
        <td><%= link_to 'Destroy', project_thread, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Project thread', new_project_thread_path %>
